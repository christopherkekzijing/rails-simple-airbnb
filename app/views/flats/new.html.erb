<div class="container">
  <%= simple_form_for(@flat) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guest, :collection => 1..10 %>
    <%= f.submit class: "btn btn-primary"%>
  </div>
  <% end %>
</div>
